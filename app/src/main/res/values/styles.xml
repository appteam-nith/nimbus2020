<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueLight</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/blueLight</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/md_brown_900</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/futura_bold</item>
    </style>

</resources>
