<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.add_d_events">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/addImgD"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fui_ic_anonymous_white_24dp"
            android:backgroundTint="#000000"
app:civ_circle_background_color="@color/colorPrimary"
            android:paddingTop="10dp" />

        <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addImgD"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:hint="Please enter name of events"
        android:inputType="textNoSuggestions"
        android:id="@+id/NameAddD"
        android:padding="20sp" />
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameAddD"
        android:id="@+id/infoAddD"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:hint="Please add info related to event"
        android:inputType="textNoSuggestions"
        android:padding="20dp"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoAddD"
        android:id="@+id/venueAddD"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:hint="Please add venue of event"
        android:inputType="textNoSuggestions"
        android:padding="20dp"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/venueAddD"
        android:id="@+id/dateAddD"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:hint="Please add date of event"
        android:inputType="datetime"
        android:padding="20dp"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateAddD"
        android:id="@+id/pdfAddD"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:hint="Please add link of pdf File "
        android:inputType="textWebEmailAddress"
        android:padding="20dp"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pdfAddD"
        android:id="@+id/addregUrlD"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:hint="Please add regUrl for the event"
        android:inputType="textWebEmailAddress"
        android:padding="20dp"/>

    <Button
        android:id="@+id/AddButtonD"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addregUrlD"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#FDFAFA"
        android:background="@drawable/buttob"
        android:padding="20dp"
        android:text="ADD"
        android:textAllCaps="false"
        android:backgroundTint="#0A0709"
        android:textStyle="bold|italic"
        android:textSize="20sp" />




</RelativeLayout>
</ScrollView>