<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardExhibition"
        android:layout_width="match_parent"


        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/exhibitionImageID"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#000000"

                />

            <TextView
                android:id="@+id/exhibtionNameID"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/exhibitionImageID"
                android:paddingLeft="5dp"
                android:text="Exhibition Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ExhibitionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/exhibtionNameID"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/exhibitionImageID"
                android:padding="5dp"
                android:text="Dated"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/exhibitionVenueID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ExhibitionDate"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/exhibitionImageID"
                android:padding="5dp"
                android:text="Venue"
                android:textSize="17sp" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>