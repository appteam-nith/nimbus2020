<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:layout_constraintVertical_bias="0.031"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/cardExhibition">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#000000"
                android:id="@+id/exhibitionImageID"

                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/exhibtionNameID"

                android:layout_height="wrap_content"
                android:text="Exhibition Name"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@+id/exhibitionImageID"/>
            <TextView
                android:id="@+id/ExhibitionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dated"
                android:textSize="17sp"
                android:layout_toRightOf="@+id/exhibitionImageID"
                android:layout_below="@+id/exhibtionNameID"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exhibitionVenueID"
                android:text="Venue"
                android:layout_below="@+id/ExhibitionDate"
                android:layout_toRightOf="@+id/exhibitionImageID"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exhibtionInfoID"
                android:layout_below="@+id/exhibitionVenueID"
                android:text="Info"
                android:textSize="17sp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/regURLExhibtion"
                android:autoLink="all"
                android:clickable="true"
                android:layout_below="@+id/exhibtionInfoID"
                android:text="URL"
                android:textColor="#08ACF5"
                android:textSize="17sp"
                android:padding="5dp"
                />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>